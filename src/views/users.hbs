<!DOCTYPE html>
<html>
  <head>
    <title>users</title>
    <meta charset="utf-8" />
  </head>
  <body>
    <h1>create new user</h1>
    <form action="/users/create" method="POST">
      <label>username</label>
      <input name="username" /><br/><br/>
      <label>age</label>
      <input name="age" type="number" min="1" max="100" /><br/><br/>
      <input type="submit" value="push" />
    </form>
    <h1>Users List</h1>
    {{#each users}}
      <div style="border: 1px solid green; padding: 10px;">
        <h3>Username: {{this.username}}</h3>
        <p>Age: {{this.age}}</p>
        <button onclick="removeById({{this.id}})">Delete</button>
      </div>
    {{/each}}
    <script>
      
      function removeById(id)  {
        fetch(`http://localhost:5000/users/delete?id=${id}`, {
            method: 'DELETE'
        }).then(() => window.location.reload())
      }
    </script>
  </body>
</html>